{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

<div class="col-sm-6 col-sm-offset-2 change-passwd-form">
	<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
		<fieldset>
			<legend class="text-center"><small>Change Password</small></legend>
			{{ form_errors(form) }}
			{{ form_row(form.current_password) }}
			{{ form_row(form.plainPassword) }}
			<div class="form-group">
				<div class="col-sm-5"></div>
			    <div class="col-sm-7">
			        <input class="btn btn-default" type="submit" value="{{ 'Change Password'|trans }}" />
			    </div>
			</div>
			{{ form_end(form) }}
		</fieldset>
			
</div>