{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

<div class="col-sm-6 col-sm-offset-2 change-passwd-form">
	<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
		<fieldset>
			<legend class="text-center"><small>Edit Profile</small></legend>
			<div class="form-group">
				<div class="col-sm-5"></div>
				<div class="col-sm-7">
					<a href="{{ path('fos_user_change_password') }}">Change password</a>
				</div>
			</div>
			{{ form_errors(form) }}
			{{ form_row(form.username, {'label':'Username'}) }}
			{{ form_row(form.email, {'label':'Email'}) }}
			{{ form_row(form.current_password, {'label':'Current Password'}) }}
			<div class="form-group">
				<div class="col-sm-5"></div>
				<div class="col-sm-7">
					<input type="submit" class="btn btn-default" value="{{ 'Save Changes'|trans }}" />
					<a class="btn btn-default" href="{{path('fos_user_profile_show')}}">{{ 'Cancel'|trans }}</a>
				</div>
			</div>

		</fieldset>

	</form>
</div>