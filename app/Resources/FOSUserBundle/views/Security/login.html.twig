{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="col-sm-6 col-sm-offset-2">
    <form class="form-horizontal login-form" action="{{ path("fos_user_security_check") }}" method="post">
        <fieldset>
            <legend class="text-center"><small>Login</small></legend>
            {% if error %}
                <div class="alert alert-dismissible alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label class="col-sm-4" for="username"><p class="text-right">{{ 'username'|trans }}</p></label>
                <div class="col-sm-7">
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>      
            </div>
            <div class="form-group">
                <label class="col-sm-4" for="password"><p class="text-right">{{ 'password'|trans }}</p></label>
                <div class="col-sm-7">
                    <input class="form-control" type="password" id="password" name="_password" required="required" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4"></div>
                <div class="checkbox col-sm-7">
                    <label>
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <span>{{ 'Remember me'|trans }}</span>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4"></div>
                <div class="col-sm-7">
                    <input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'login'|trans }}" />
                </div>    
            </div>
        </fieldset>

    </form>
</div>

{% endblock fos_user_content %}