{% extends (isHtml)? 'zone/reports/zone_reports_basic.html.twig':'base.html.twig' %}


{% block body %} 
	{% if isHtml %}
		{{ parent() }}
	{% else %}
		{{ block('reports_body') }}
	{% endif %}
	
{% endblock %}
{% block reports_body %}	
    <h3><p class="text-center">Special Needs Education Management Information System Basic Report</p></h3>

    {# Zone identification section #}
    <h4>Zone Identification</h4>
    <table class="table table-condensed" {% if not isHtml %} border="1" {% endif %}>
        <tr>
            <th rowspan="4" width="20%">Zone Id Label</th>
            <th align="center">Identifier</th>
            <th align="center">Name</th>
            <th align="center">Numeric code</th>
        </tr>			
        <tr>
            <td>1. Zone</td>
            <td>{{ zone.zone_name }}</td>
            <td align="left">{{ zone.idzone }}</td>
        </tr>
        <tr>
            <td>2. District</td>
            <td>{{ zone.district_name }}</td>
            <td align="left">{{ zone.iddistrict }}</td>
        </tr>                    
    </table>

    <h4>New Learners with Disability, Dropouts, and Learners with Disability on Transfer</h4>        
    <table class="table table-condensed" {% if not isHtml %} border="1" {% endif %}>
        <tr>
            <th align="center">LWD Enrolled This Year</th>
            <th align="center">Transfer To Other Schools</th>
            <th align="center">Dropouts</th>
            <th align="center">LWD Who Completed Std 8</th>
        </tr>			
        <tr>
            <td>
                <table class="table table-condensed" {% if not isHtml %} border="1" {% endif %}>
                    <tr>
                        <td>Boys</td>
                        <td>Girls</td>
                        <td>Total</td>
                    </tr>
                    <tr>
                        <td>{{ numBoys }}</td>
                        <td>{{ numGirls }}</td>
                        <td>{{ totalEnrolled }}</td>
                    </tr>
                </table>
            </td>        
        </tr>                    
    </table>
{% endblock %}