{% extends "base.html.twig" %}

{% block stylesheets %}
	{{parent()}}
	<link href="{{asset('assets/css/school.css')}}" rel="stylesheet">
{% endblock %}
{% block navdistr %}active{% endblock %} 
{% block vertnav %}{%endblock%}
{% block rightcolumn %}
    {# include the form used for selecting a district #}
    {% block district_select_form %}
        {{ render(controller('AppBundle:Default:districtSelectForm')) }}
    {% endblock %}
    {% block district_info %} {% endblock %}
    <div class="row content">
        {% block content %}
            {% if error is not null %}
                <h2 class="text-center"><small>{{ error }}</small></h2>
            {% else %}
                <br><br><h2 class="text-center"><small>District not chosen</small></h2>
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{asset('assets/js/school.js')}}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
{% endblock %}