{% extends (isHtml)? 'district/reports/district_reports_basic.html.twig':'base.html.twig' %}

{% block body %} 
	{% if isHtml %}
		{{ parent() }}
	{% else %}
		{{ block('reports_body') }}
	{% endif %}
	
{% endblock %}
{% block reports_body %}	
    <h3><p class="text-center">Special Needs Education Management Information System Basic Report</p></h3>

    {# Zone identification section #}
    <h4>District Identification</h4>
    <table class="table table-condensed" {% if not isHtml %} border="1" {% endif %}>
        <tr>
            <th rowspan="4" width="20%" align="middle">District Id Label</th>
            <th align="center">Identifier</th>
            <th align="center">Name</th>
            <th align="center">Numeric code</th>
            <th align="center">Number of Schools</th>
        </tr>			        
        <tr>
            <td>1. District</td>
            <td>{{ district.district_name }}</td>
            <td align="center">{{ district.iddistrict }}</td>
            <td align="center">{{ numOfSchools }}</td>
        </tr>                    
    </table>

    {% if preliminary is defined %}
        {% include 'district/reports/district_preliminary.html.twig' %}
    {% endif %}
    {% if specialNeeds is defined %}
        {% include 'district/reports/district_special_needs.html.twig' %}
    {% endif %}
    {% if learningMaterials is defined %}
        {% include 'zone/reports/zone_teaching_materials.html.twig' %}
    {% endif %}
    
{% endblock %}