<div class="row school-choose">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-4"><h4>Choose School</h4></div>
            <div class="col-sm-8">
                <h5><p class="text-right">
                    {% if schoolName != "" %}
                        {{ "<strong>currently selected</strong>: " }}
                    {% endif %}
                    {{ schoolName }}</p>
                </h5>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                {{ form_start(form1, {'attr':{'class':'form-inline', 'role':'form'}}) }}
                    {{ form_errors(form1)}}
                    <div class="form-group">
                        {{ form_label(form1.emiscode, null, {'label_attr':{'class':'sr-only'}})}}
                        {{ form_errors(form1.emiscode)}}
                        <div class="input-group input-group-sm">
                            {{ form_widget(form1.emiscode, {
                                'attr':{
                                    'class':'form-control',
                                    'placeholder':'School Emis Code'
                                }
                            }) }}
                            <div class="input-group-btn">
                                {{ form_widget(form1.findschool,{'attr':{'class':'btn btn-default'}}) 
                                }}
                            </div>

                        </div>
                    </div>

                {{ form_end(form1) }}
            </div>
            <div class="col-xs-7">
                <div class="col-md-1"><p class="text-center"><strong>OR</strong></p></div>
                <div class="col-md-8">
                    {{ form_start(form2, {'attr':{'class':'form-inline','id':'findByName', 'role':'form'}}) }}
                    {{ form_errors(form2)}}
                    <div class="form-group">
                        {{ form_label(form2.district, null, {'label_attr':{'class':'sr-only'}}) }}
                        {{ form_widget(form2.district, {'attr':{'class':'form-control input-sm'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form2.school, null, {'label_attr':{'class':'sr-only'}}) }}
                        {{ form_widget(form2.school, {'attr':{'class':'form-control input-sm limited-select'}}) }}
                    </div>
                    {{ form_end(form2) }}
                </div>
            </div>
            {% set message = error %}
        </div>
    </div>
</div>