{% extends "base.html.twig" %}

{% block navschool %}{% endblock %}

{% block stylesheets %}
	{{parent()}}
	<link href="{{asset('assets/css/school.css')}}" rel="stylesheet">
{% endblock %}

{% block rightcolumn %}
    {# include the form used for selecting a school #}
    {% block school_select_form %}
         {{ render(controller('AppBundle:Default:schoolSelectForm')) }}
    {% endblock %}

    <div class="row content">
        {% block content %}
            {% block material1 %}{% endblock %}
            {% block resource1 %}{% endblock %}
            {% block material2 %}{% endblock %}
            {% block resource2 %}{% endblock %}
            <br><br><h2 class="text-center"><small>School not chosen</small></h2>
        {% endblock %}
    </div>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{asset('assets/js/school.js')}}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
{% endblock %}