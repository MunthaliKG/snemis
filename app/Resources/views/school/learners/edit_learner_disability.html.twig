							<img src="{{asset('assets/images/snlis-logo.png')}}" alt="Chania">
						</div>
						<div class="item">
							<img src="{{asset('assets/images/banner.png')}}" alt="Chania">
						</div>		
					
				</div>

				<!-- Left and right controls -->
				<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
