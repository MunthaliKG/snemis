<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Need" table="need">
    <id name="idneed" type="integer" column="idneed">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="needname" type="string" column="needname" length="45" nullable="false"/>
    <field name="type" type="string" column="type" nullable="false"/>
    <field name="availableInRc" type="string" column="available_in_rc" nullable="true"/>
    <field name="quantity" type="integer" column="quantity" nullable="true"/>
    <many-to-many field="emiscode" target-entity="School" mapped-by="idneed"/>
    <many-to-many field="iddisability" target-entity="Disability" inversed-by="idneed">
      <join-table name="disability_has_need">
        <join-columns>
          <join-column name="idneed" referenced-column-name="idneed"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="iddisability" referenced-column-name="iddisability"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
